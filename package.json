{
  "name": "growcss",
  "private": true,
  "license": "MIT",
  "scripts": {
    "bootstrap": "                 node verify-node-version.js && lerna bootstrap",
    "build": "                     node verify-node-version.js && lerna exec -- sort-package-json && cross-env NODE_ENV=production lerna run build",
    "changed": "                   node verify-node-version.js && lerna changed",
    "changelog": "                 node verify-node-version.js && lerna-changelog",
    "clear": "                     yarn run clear:modules && yarn run clear:build",
    "clear:build": "               node verify-node-version.js && lerna exec -- rimraf dist",
    "clear:modules": "             node verify-node-version.js && lerna clean --yes",
    "lint": "                      yarn run lint:eslint && yarn run lint:tslint && yarn run lint:stylelint",
    "lint:stylelint": "            node verify-node-version.js && stylelint-config-prettier-check && stylelint 'packages/*/*/src/**/*.+{js,ts,tsx}'",
    "lint:eslint": "               node verify-node-version.js && eslint -c .eslintrc.js --print-config .eslintrc.js | eslint-config-prettier-check && eslint 'packages/*/*/**/*.{js,jsx}'",
    "lint:fix": "                  yarn run lint:fix:eslint && yarn run lint:fix:tslint:sources && yarn run lint:fix:tslint:supporting && yarn run lint:fix:stylelint",
    "lint:fix:eslint": "           yarn run lint:eslint --fix",
    "lint:fix:tslint:sources": "   node verify-node-version.js && tslint-config-prettier-check ./tslint.sources.json && tslint --fix -c ./tslint.sources.json --format stylish 'packages/*/*/src/**/*.+(ts|tsx)'",
    "lint:fix:tslint:supporting": "node verify-node-version.js && tslint-config-prettier-check ./tslint.supporting.json && tslint --fix -c ./tslint.supporting.json --format stylish 'packages/*/*/src/+(examples|docs|example-helpers|__tests__)/**/*.(ts|tsx)'",
    "lint:fix:stylelint": "        node verify-node-version.js && stylelint 'packages/*/*/src/**/*.+{js,ts,tsx}' --fix",
    "lint:tslint": "               yarn run lint:tslint:sources && yarn run lint:tslint:supporting",
    "lint:tslint:sources": "       node verify-node-version.js && tslint-config-prettier-check ./tslint.sources.json && tslint -c ./tslint.sources.json --format stylish 'packages/*/*/src/**/*.+(ts|tsx)'",
    "lint:tslint:supporting": "    node verify-node-version.js && tslint-config-prettier-check ./tslint.supporting.json && tslint -c ./tslint.supporting.json --format stylish 'packages/*/*/src/+(examples|docs|example-helpers|__tests__)/**/*.(ts|tsx)'",
    "storybook": "                 node verify-node-version.js && cross-env NODE_ENV=storybook start-storybook -p 6006 -c .storybook",
    "storybook-build": "           cross-env NODE_ENV=production build-storyboo k-c .storybook",
    "test": "                      node verify-node-version.js && cross-env NODE_ENV=test jest",
    "test:changed": "              cross-env NODE_ENV=test CHANGED_PACKAGES=$(yarn run changed) COVERAGE_PACKAGES=$(yarn run changed) jest",
    "test:coverage": "             yarn run test --coverage",
    "test:watch": "                yarn run test --watch"
  },
