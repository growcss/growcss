{
  "packages": [
    "packages/coding-standard/*",
    "packages/core/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/dist/**",
        "**/__stories__/**",
        "**/__tests__/**",
        "**/*.md",
        "**/.rpt2_cache"
      ],
      "allowBranch": "master",
      "conventionalCommits": true
    }
  },
  "changelog": {
    "repo": "growcss/growcss",
    "labels": {
      "Changelog: Added": "Added",
      "Changelog: Changed": "Changed",
      "Changelog: Deprecated": "Deprecated",
      "Changelog: Removed": "Removed",
      "Changelog: Fixed": "Fixed",
      "Changelog: Security": "Security"
    },
    "cacheDir": ".changelog"
  },
  "version": "independent",
  "npmClient": "npm",
  "npmClientArgs": [
    "--no-lockfile"
  ]
}
